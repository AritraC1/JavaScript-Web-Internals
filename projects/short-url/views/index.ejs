<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;1,9..40,300&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/styles.css">

  <style>
    /* â”€â”€ Analytics Modal Overlay â”€â”€ */
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.65);
      backdrop-filter: blur(6px);
      -webkit-backdrop-filter: blur(6px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.25s ease;
    }
    .modal-overlay.active {
      opacity: 1;
      pointer-events: all;
    }

    /* â”€â”€ Modal Card â”€â”€ */
    .modal {
      background: #0f0f0f;
      border: 1px solid rgba(255,255,255,0.1);
      border-radius: 20px;
      padding: 32px;
      width: 100%;
      max-width: 480px;
      box-shadow: 0 40px 80px rgba(0,0,0,0.6);
      transform: translateY(20px) scale(0.97);
      transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
      position: relative;
    }
    .modal-overlay.active .modal {
      transform: translateY(0) scale(1);
    }

    /* â”€â”€ Modal Header â”€â”€ */
    .modal-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 24px;
    }
    .modal-title {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 28px;
      letter-spacing: 1px;
      color: #fff;
    }
    .modal-close {
      background: rgba(255,255,255,0.07);
      border: 1px solid rgba(255,255,255,0.1);
      color: rgba(255,255,255,0.6);
      width: 34px;
      height: 34px;
      border-radius: 50%;
      font-size: 18px;
      line-height: 1;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background 0.2s, color 0.2s;
    }
    .modal-close:hover {
      background: rgba(255,255,255,0.15);
      color: #fff;
    }

    /* â”€â”€ Short URL pill in modal â”€â”€ */
    .modal-url-pill {
      background: rgba(255,255,255,0.05);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 10px;
      padding: 10px 16px;
      font-size: 13px;
      color: rgba(255,255,255,0.5);
      margin-bottom: 24px;
      word-break: break-all;
    }
    .modal-url-pill strong {
      color: rgba(255,255,255,0.85);
    }

    /* â”€â”€ Stats Grid â”€â”€ */
    .analytics-stats {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      margin-bottom: 24px;
    }
    .analytics-stat-card {
      background: rgba(255,255,255,0.04);
      border: 1px solid rgba(255,255,255,0.08);
      border-radius: 14px;
      padding: 18px 20px;
      text-align: center;
    }
    .analytics-stat-card.wide {
      grid-column: span 2;
    }
    .analytics-stat-num {
      font-family: 'Bebas Neue', sans-serif;
      font-size: 42px;
      color: #fff;
      line-height: 1;
    }
    .analytics-stat-label {
      font-size: 12px;
      color: rgba(255,255,255,0.4);
      margin-top: 4px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    /* â”€â”€ Visit History â”€â”€ */
    .analytics-history-title {
      font-size: 11px;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: rgba(255,255,255,0.35);
      margin-bottom: 10px;
    }
    .analytics-history {
      display: flex;
      flex-direction: column;
      gap: 6px;
      max-height: 180px;
      overflow-y: auto;
      scrollbar-width: thin;
      scrollbar-color: rgba(255,255,255,0.1) transparent;
    }
    .history-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      background: rgba(255,255,255,0.03);
      border: 1px solid rgba(255,255,255,0.06);
      border-radius: 8px;
      padding: 8px 14px;
      font-size: 13px;
      color: rgba(255,255,255,0.55);
    }
    .history-item .dot {
      width: 6px;
      height: 6px;
      border-radius: 50%;
      background: #4ade80;
      flex-shrink: 0;
      margin-right: 10px;
    }
    .history-item .ts {
      flex: 1;
    }
    .history-item .visit-num {
      color: rgba(255,255,255,0.25);
      font-size: 11px;
    }

    .analytics-empty {
      text-align: center;
      padding: 24px;
      color: rgba(255,255,255,0.3);
      font-size: 13px;
    }

    /* â”€â”€ Loading state â”€â”€ */
    .analytics-loading {
      text-align: center;
      padding: 40px 0;
      color: rgba(255,255,255,0.4);
      font-size: 14px;
    }
    .spinner {
      width: 28px;
      height: 28px;
      border: 2px solid rgba(255,255,255,0.1);
      border-top-color: rgba(255,255,255,0.6);
      border-radius: 50%;
      animation: spin 0.7s linear infinite;
      margin: 0 auto 12px;
    }
    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    /* â”€â”€ Error state â”€â”€ */
    .analytics-error {
      text-align: center;
      padding: 28px 0;
      color: #f87171;
      font-size: 13px;
    }
  </style>
</head>

<body>

  <div class="noise"></div>

  <div class="container">

    <!-- LEFT SIDE -->
    <div class="left">
      <h1>
        <span class="light">Meet Your New</span><br>
        <span class="headline-main">URL<br>Shortener.</span>
      </h1>

      <p>
        Take control of your links - built for people who move fast and share smart.
      </p>

      <div class="cta-row">
        <button class="primary-btn" onclick="document.getElementById('longUrl').focus()">
          Simplify Your Links <span class="arrow">â†’</span>
        </button>
        <div class="subtext">Start for Free Â· No Card Required</div>
      </div>

      <div class="stats-row">
        <div class="stat">
          <span class="stat-num">12M+</span>
          <span class="stat-label">Links Shortened</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-num">99.9%</span>
          <span class="stat-label">Uptime</span>
        </div>
        <div class="stat-divider"></div>
        <div class="stat">
          <span class="stat-num">180+</span>
          <span class="stat-label">Countries</span>
        </div>
      </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="right">
      <div class="card-glow"></div>

      <div class="card">

        <div class="card-header">
          <span class="card-tag">âœ¦ Live Preview</span>
        </div>

        <!-- INPUT -->
        <div class="input-wrap">
          <span class="input-icon">ðŸ”—</span>
          <input id="longUrl" class="input" placeholder="Paste your long URL hereâ€¦">
          <button class="shorten-btn" onclick="generateShortUrl()">Go</button>
        </div>

        <!-- GENERATED OUTPUT -->
        <div class="generated" id="generatedSection" style="display:none;">
          <div class="generated-label">Generated Link</div>
          <div class="generated-url">
            âš¡ <strong id="shortUrlText"></strong>
          </div>
          <div class="redirect" id="redirectText"></div>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="actions" id="actionButtons" style="display:none;">
          <button class="secondary" onclick="copyToClipboard()">
            Copy Link
          </button>

          <button class="secondary" onclick="viewAnalytics()">
            Analytics
          </button>
        </div>

        <div class="trusted">
          <span class="trusted-label">Trusted by</span>
          <div class="trusted-logos">
            <span>Vercel</span>
            <span>Linear</span>
            <span>Notion</span>
            <span>Stripe</span>
          </div>
        </div>

      </div>
    </div>

  </div>

  <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•
       ANALYTICS MODAL
  â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
  <div class="modal-overlay" id="analyticsModal" onclick="handleOverlayClick(event)">
    <div class="modal">

      <div class="modal-header">
        <div class="modal-title">Analytics</div>
        <button class="modal-close" onclick="closeAnalytics()" aria-label="Close">âœ•</button>
      </div>

      <!-- Pill showing the short URL being inspected -->
      <div class="modal-url-pill" id="modalUrlPill"></div>

      <!-- Dynamic content injected by JS -->
      <div id="analyticsBody">
        <div class="analytics-loading">
          <div class="spinner"></div>
          Fetching dataâ€¦
        </div>
      </div>

    </div>
  </div>

  <!-- JAVASCRIPT -->
  <script>
    let currentShortId = "";

    async function generateShortUrl() {
      const longUrl = document.getElementById("longUrl").value.trim();

      if (!longUrl) {
        alert("Please enter a URL");
        return;
      }

      try {
        const response = await fetch("/api/url", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ url: longUrl })
        });

        const data = await response.json();

        if (!data.id) {
          alert("Something went wrong.");
          return;
        }

        currentShortId = data.id;
        const fullShortUrl = window.location.origin + "/api/" + data.id;

        document.getElementById("shortUrlText").innerText = fullShortUrl;
        document.getElementById("redirectText").innerText = "â†³ " + longUrl;
        document.getElementById("generatedSection").style.display = "block";
        document.getElementById("actionButtons").style.display = "flex";

      } catch (err) {
        console.error(err);
        alert("Server error.");
      }
    }

    function copyToClipboard() {
      const text = document.getElementById("shortUrlText").innerText;
      navigator.clipboard.writeText(text);
      alert("Copied to clipboard!");
    }

    // â”€â”€ Open analytics modal â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    async function viewAnalytics() {
      if (!currentShortId) return;

      // Show modal immediately with loading state
      const modal = document.getElementById("analyticsModal");
      const body  = document.getElementById("analyticsBody");
      const pill  = document.getElementById("modalUrlPill");

      const fullShortUrl = window.location.origin + "/api/" + currentShortId;
      pill.innerHTML = `<strong>${fullShortUrl}</strong>`;

      body.innerHTML = `
        <div class="analytics-loading">
          <div class="spinner"></div>
          Fetching dataâ€¦
        </div>`;

      modal.classList.add("active");
      document.body.style.overflow = "hidden";

      try {
        const res  = await fetch("/api/analytics/" + currentShortId);
        const data = await res.json();
        renderAnalytics(data);
      } catch (err) {
        body.innerHTML = `<div class="analytics-error">âš  Failed to load analytics.</div>`;
      }
    }

    // â”€â”€ Render analytics data into modal â”€â”€â”€â”€â”€
    function renderAnalytics(data) {
      const body = document.getElementById("analyticsBody");
      const total = data.totalClicks ?? 0;
      const history = data.analytics ?? [];

      // Compute first & last visit
      const sorted = [...history].sort((a, b) => a.timestamp - b.timestamp);
      const firstVisit = sorted.length ? formatDate(sorted[0].timestamp)        : "â€”";
      const lastVisit  = sorted.length ? formatDate(sorted[sorted.length - 1].timestamp) : "â€”";

      // Build history rows (newest first)
      let historyHtml = "";
      if (history.length === 0) {
        historyHtml = `<div class="analytics-empty">No visits recorded yet.</div>`;
      } else {
        const reversed = [...history].sort((a, b) => b.timestamp - a.timestamp);
        historyHtml = `
          <div class="analytics-history-title">Visit log</div>
          <div class="analytics-history">
            ${reversed.map((v, i) => `
              <div class="history-item">
                <span class="dot"></span>
                <span class="ts">${formatDate(v.timestamp)}</span>
                <span class="visit-num">#${history.length - i}</span>
              </div>
            `).join("")}
          </div>`;
      }

      body.innerHTML = `
        <div class="analytics-stats">
          <div class="analytics-stat-card wide">
            <div class="analytics-stat-num">${total}</div>
            <div class="analytics-stat-label">Total Clicks</div>
          </div>
          <div class="analytics-stat-card">
            <div class="analytics-stat-num" style="font-size:18px;padding:6px 0;">${firstVisit}</div>
            <div class="analytics-stat-label">First Visit</div>
          </div>
          <div class="analytics-stat-card">
            <div class="analytics-stat-num" style="font-size:18px;padding:6px 0;">${lastVisit}</div>
            <div class="analytics-stat-label">Last Visit</div>
          </div>
        </div>
        ${historyHtml}
      `;
    }

    // â”€â”€ Close helpers â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function closeAnalytics() {
      document.getElementById("analyticsModal").classList.remove("active");
      document.body.style.overflow = "";
    }

    function handleOverlayClick(e) {
      // Close if clicking the dark backdrop, not the modal card itself
      if (e.target === document.getElementById("analyticsModal")) {
        closeAnalytics();
      }
    }

    // Close on Escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape") closeAnalytics();
    });

    // â”€â”€ Utility â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
    function formatDate(timestamp) {
      const d = new Date(timestamp);
      return d.toLocaleString(undefined, {
        month:  "short",
        day:    "numeric",
        hour:   "2-digit",
        minute: "2-digit"
      });
    }

    // Allow Enter key to submit
    document.getElementById("longUrl").addEventListener("keypress", function(e) {
      if (e.key === "Enter") generateShortUrl();
    });
  </script>

</body>
</html>
